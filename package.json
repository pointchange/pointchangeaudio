{
  "name": "pointchangeaudio",
  "version": "0.0.0",
  "private": true,
  "description": "pointchangeaudio(PCA)",
  "main": "main.js",
  "author": "pointchange",
  "license": "MIT",
  "scripts": {
    "pack": "electron-builder --dir",
