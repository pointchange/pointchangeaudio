{
  "name": "pointchangeaudio",
  "version": "0.0.7",
  "private": true,
  "description": "pointchangeaudio(PCA)",
  "main": "main.js",
  "author": "pointchange",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "start": "nodemon --exec electron . --watch ./ --ext .js,.html,.css,.vue",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "electron-squirrel-startup": "^1.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "music-metadata": "^8.3.0"
  },
  "devDependencies": {
    "animate.css": "^4.1.1",
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@element-plus/icons-vue": "^2.3.1",
    "@vitejs/plugin-vue": "^5.0.4",
    "cross-env": "^7.0.3",
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3",
    "element-plus": "^2.7.6",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    "unplugin-auto-import": "^0.18.2",
    "unplugin-vue-components": "^0.27.3",
    "vite": "^5.2.8",
    "vue": "^3.4.21",
    "vue-router": "^4.3.2"
  },
  "build": {
    "appId": "com.pointchange.audio",
    "productName": "pointchangeaudio",
    "copyright": "pointchangeÂ©20240719",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist",
      "vue_child/dist",
      "preload",
      "main.js",
      "util",
      "images"
    ],
    "asar": true,
    "win": {
      "icon": "images/chrome-256x256.ico",
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "language": "2052",
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "installerIcon": "images/chrome-256x256.ico",
      "uninstallerIcon": "images/chrome-256x256.ico",
      "installerHeaderIcon": "images/chrome-256x256.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": {
          "ListOptions": {
            "isPack": true
          },
          "CreateOptions": {
            "unpackDir": "./node_modules/@ffmpeg-installer"
          }
        },
        "name": "pointchangeaudio",
        "executableName": "pointchangeaudio(PCA)",
        "icon": "./images/chrome-256x256"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "setupIcon": "./images/chrome-256x256.ico"
          }
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-auto-unpack-natives",
          "config": {}
        }
      ]
    }
  }
}