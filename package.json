    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "cross-env": "^7.0.3",
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3",
    "vite": "^5.2.8"
  },
  "build": {
    "appId": "com.pointchange.audio",
    "productName": "pointchangeaudio",
    "copyright": "pointchangeÂ©20240719",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist",
      "vue_child/dist",
      "preload",
      "main.js",
      "util",
      "images"
    ],
    "asar": true,
    "win": {
      "icon": "images/chrome-256x256.ico",
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "language": "2052",
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "installerIcon": "images/chrome-256x256.ico",
      "uninstallerIcon": "images/chrome-256x256.ico",
      "installerHeaderIcon": "images/chrome-256x256.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}